<%= bootstrap_devise_error_messages! %>

<h1><i class="fa fa-user-plus"></i> <%= t('.sign_up', :default => "Sign up") %></h1>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: 'form', autocomplete: 'off' }) do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, class: "form-control", required: 'required', autocomplete: 'off' %>
    </div>
    <div class="form-group">
      <%= f.label :password %><br/>
      <%= f.password_field :password, class: "form-control", required: 'required', autocomplete: 'off' %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: "form-control", required: 'required', autocomplete: 'off' %>
    </div>
    <%= f.submit t('.sign_up', :default => "Sign up"), class: "btn btn-default" %>
<% end %>

<%= render 'devise/shared/links' %>
