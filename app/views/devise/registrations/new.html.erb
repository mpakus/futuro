<%= bootstrap_devise_error_messages! %>

<h1><i class="fa fa-user-plus"></i> <%= t('.sign_up', default: 'Sign up') %></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form', autocomplete: 'off' }) do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, class: 'form-control', required: 'required', autocomplete: 'off' %>
    </div>
    <div class="form-group">
      <%= f.label :personal_uri %>
      <div class="input-group">
        <span class="input-group-addon">http://futuro.co/@</span>
        <%= f.text_field :personal_uri, autofocus: true, class: 'form-control', required: 'required', autocomplete: 'off' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', required: 'required', autocomplete: 'off' %>
    </div>
    <div class="form-group">
      <%= f.label :password %><br/>
      <%= f.password_field :password, class: 'form-control', required: 'required', autocomplete: 'off' %>
    </div>
    <div class="form-group">
    <%= f.submit t('.sign_up', default: "Sign up"), class: 'btn btn-default' %>
<% end %>

<%= render 'devise/shared/links' %>
