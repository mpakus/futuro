<%= form_for(@post) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :access %>
    <%= f.number_field :access, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :blog_id %>
    <%= f.text_field :blog_id %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
