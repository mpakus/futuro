<header class="hero-image" role="banner" style="background-image: url('<%= @post.header.url %>')">
  <%= render 'shared/logo' %>
</header>

<main class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8 single-content-sidebar">

      <h1><%= @post.title %></h1>

      <%= @post.content %>

    </div>

    <div class="col-xs-12 col-md-3 col-md-offset-1 single-content-sidebar-area">

      <%= image_tag 'profile-1.jpg', class: 'user-icon', alt: @post.author_name %>

      <div class="meta">

        <div class="sidebar-info">
          <a href="category.html"><%= @post.author_name %></a> in <a href="category.html"><%= @post.blog_name %></a>
        </div>

        <div class="sidebar-readtime">
          <i class="fa fa-bookmark"></i>
        </div>

      </div>

      <h2 class="favorites">Similar Categories</h2>

      <a href="category.html" >
        <div class="similar-cat">
          <%= image_tag 'similar-cat-1.jpg' %>
          <h3>Storytime</h3>
        </div>
      </a>

      <a href="category.html" >
        <div class="similar-cat">
          <%= image_tag 'similar-cat-2.jpg' %>
          <h3>Nature</h3>
        </div>
      </a>

      <a href="category.html" >
        <div class="similar-cat">
          <%= image_tag 'similar-cat-3.jpg' %>
          <h3>Travel</h3>
        </div>
      </a>

      <h2 class="favorites">Similar Posts</h2>

      <div class="similar-post">
        <a href="post.html"><h3>Leave the City for a Life on the Road</h3></a>
      </div>

      <div class="similar-post">
        <a href="post.html"><h3>The Best Story Never Told</h3></a>
      </div>

      <div class="similar-post">
        <a href="post.html"><h3>Stop Thinking and Start Doing</h3></a>
      </div>

      <div class="similar-post">
        <a href="post.html"><h3>You Don't Have To Be Great To Get Started</h3></a>
      </div>

    </div>
  </div>

</main>

<footer class="single without-readmore">
  <div class="container">
    <div class="row">

      <div class="col-xs-12 col-sm-2">
        <%= image_tag 'profile-1.jpg', class: 'user-icon', alt: @post.author_name %>
      </div>

      <div class="col-xs-12 col-sm-6">
        <div class="category-list">
          <p>Published <span>14th May 2015</span></p>
          <p><a href="#"><%= @post.author_name %></a> in <a href="#"><%= @post.blog_name %></a></p>

          <div class="other-catergories">
            <h3>Also found in</h3>

            <ul>
              <li><a href="#">Stories</a>,</li>
              <li><a href="#">Life</a>,</li>
              <li><a href="#">Adventures</a></li>
            </ul>
          </div>

        </div>
      </div><!-- end col -->

      <div class="col-xs-12 col-sm-4">
        <div class="social">
          <p>Share this article</a>
          <div class="social-links">
            <a class="social-icon" href="#" data-platform="twitter" data-message="Message about this post" data-url="http://writertheme.com/post"><i class="fa fa-twitter"></i></a>

            <a class="social-icon" href="#" data-platform="facebook" data-message="Message about this post" data-url="http://writertheme.com/post"><i class="fa fa-facebook-official"></i></a>

            <a class="social-icon" data-platform="mail"  href="mailto:support@writertheme.com"><i class="fa fa-envelope"></i></a>
          </div>
        </div>
      </div>

    </div><!-- end row -->
  </div>
</footer>
