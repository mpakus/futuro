<%= form_for([:futuro, @post]) do |f| %>
    <%= form_errors @post %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :blog_id %>
      <%= f.collection_select :blog_id, current_user.blogs.all, :id, :name, {}, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :tag_list %>
      <%= f.text_field :tag_list, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit 'Save', class: 'btn btn-default' %>
    </div>
<% end %>
