<header class="posts-tools">
  <%= render 'shared/logo' %>
  <%= render 'form' %>
</header>

<main class="container">
  <div class="row">
    <div class="col-lg-10 col-lg-offset-1">

      <div id="post_blocks" class="post-blocks">
        <% @post.list_of_blocks.each do |block| %>
          <%= render post_block_template(block), block: block %>
        <% end %>
      </div>

      <%= render 'block_controls' %>

      <%= render 'shared/footer' %>
    </div>
  </div>
</main>

